<form class="create-update-form" action="burgers/create" method="POST">

  <div class="form-group">
    <label for="ca">Burg Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="slee">Sleepy?</label><br>
    <input type="radio" name="sleepy" value="1" checked> Sleepy!<br>
    <input type="radio" name="sleepy" value="0"> Awake
  </div>

  <button type="submit">Devoured</button>
</form>

<div class="container">
    <div class="row">
      <div class="jumbotron">
        <h1 class=""> Eat-Da-Burger!</h1>
        <hr>
        
      </div>
    </div>

    <div class="row">
      <div class="col-md-3">
        
        <input type="input" name="input" id="input" class="form-control" required >
        <br>
        <button id="submit">Submit!</button>
        <br>
      </div>
    </div>


      <footer class="footer">
            <p>Enter a burger you want to eat, click "submit" button.</p>
      </footer>

  </div>

  <script>
  // define sign in function
  function Info(){
    // grab data from form
    var data = {
      username: $('#input').val().trim()
    };
    // grab url to ajax call
    var currentURL = location.origin + "/api/auth";

    // post our login data
    $.post(currentURL, data, function(results){
      console.log(results);
    });
  }

  // define call on button
  $(document).on('click', '#submit', function(){
    // sign in
    Info();
    // prevent default behavior
    return false;
  })
  </script>